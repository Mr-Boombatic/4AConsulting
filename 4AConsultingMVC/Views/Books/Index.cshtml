@model IEnumerable<_4AConsultingMVC.Models.Book>

@{
    ViewData["Title"] = "Список книг";
}

<h2>Список книг</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Добавить новую книгу</a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Автор</th>
            <th>Год издания</th>
            <th>Описание</th>
            <th>Разделов</th>
            <th>Подразделов</th>
            <th>Дата создания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublicationYear</td>
                <td>@(book.Description != null && book.Description.Length > 50 ? book.Description.Substring(0, 50) + "..." : book.Description)</td>
                <td style="text-align: center;">@book.GetSectionCount()</td>
                <td style="text-align: center;">@book.GetSubSectionCount()</td>
                <td>@book.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <div class="d-flex flex-column">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info mb-2">Просмотр</a>
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning mb-2">Редактировать</a>
                        <form asp-action="Delete" asp-route-id="@book.Id" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту книгу?');" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
